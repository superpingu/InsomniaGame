      label(for="endTime") arr&ecirc;t automatique &agrave;
      input(id="endTime" value="#{config().endTime}")
      | &nbsp;heure (hh:mm)
      a.update-endTime mettre &agrave; jour

      script(src="bower_components/jquery/dist/jquery.min.js")
      script(src="scripts/clientadmin.js")

