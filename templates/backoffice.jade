      a.odd-score-reset r&eacute;initialiser

      h3.even Equipe Rouge
      input(type="number", value="#{teams().even.score()}", min="0").even-score
      a.even-score-set modifier
      a.even-score-reset r&eacute;initialiser

      br
      br
      h2
         span.fa.fa-beer
         | Horror Time
      label(for="happyTime-message") Message :
      input(id="happyTime-message" value="#{config().happyMessage}")
      a.update-message mettre &agrave; jour
      br
      label(for="happyTime-duration") Dur&eacute;e :
      input(type="number", id="happyTime-duration" value="#{config().happyTime}")
      | &nbsp;minutes
      a.start-time d&eacute;marrer
      a.stop-time arr&ecirc;ter
      br
      br
      h2
         span.fa.fa-random
         | Probabilit&eacute; des boissons gratuites
      label(for="probability") probabilit&eacute; :
      input(type="number", id="probability" value="#{config().freeDrink}")
      | &nbsp;%
      a.update-proba mettre &agrave; jour
      br
      br
      h2
         span.fa.fa-clock-o
         | Fin de jeu
      label(for="endCountdown") compte &agrave; rebours de fin :
      input(type="number" id="endCountdown" value="#{config().endCountdown}")
